{
	"name": "diary",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"seed": "cd data && sqlite3 local.db < seed.sql",
		"db": "cd data && sqlite3 local.db",
		"cleanup": "tsx scripts/cleanup.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/bcrypt": "^6.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/nodemailer": "^7.0.9",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"bcrypt": "^6.0.0",
		"jsonwebtoken": "^9.0.3",
		"lucide-svelte": "^0.563.0",
		"nodemailer": "^7.0.12",
		"valibot": "^1.2.0"
	}
}
